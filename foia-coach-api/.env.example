# Django Configuration
DJANGO_SETTINGS_MODULE=config.settings.local
DJANGO_SECRET_KEY=your-secret-key-here

# Database Configuration
POSTGRES_DB=foia_coach
POSTGRES_USER=foia_coach_user
POSTGRES_PASSWORD=your-password-here
POSTGRES_HOST=foia_coach_postgres
POSTGRES_PORT=5432

# Backend API URL - Used for generating full URLs to media files in API responses
BACKEND_API_URL=http://localhost:8001

# RAG Provider Configuration
# Which RAG provider to use: 'openai' or 'gemini' or 'mock'
RAG_PROVIDER=openai

# Gemini API Configuration
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_FILE_SEARCH_STORE_NAME=StatePublicRecordsStore
GEMINI_MODEL=gemini-1.5-flash

# Safety flag: Disable real Gemini API calls by default
# Set to 'true' to enable real API calls (WARNING: will use your Gemini quota!)
# Leave as 'false' or comment out during development to prevent accidental API usage
GEMINI_REAL_API_ENABLED=false

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_VECTOR_STORE_NAME=StatePublicRecordsStore
OPENAI_MODEL=gpt-4o-mini

# Safety flag: Disable real OpenAI API calls by default
# Set to 'true' to enable real API calls (WARNING: will use your OpenAI credits!)
# Leave as 'false' or comment out during development to prevent accidental API usage
OPENAI_REAL_API_ENABLED=false

# MuckRock API Configuration
# For local Docker network: http://dev.muckrock.com (requires /etc/hosts mapping)
# For production: https://muckrock.com
MUCKROCK_API_URL=http://dev.muckrock.com
MUCKROCK_API_TOKEN=your-muckrock-api-token-here
